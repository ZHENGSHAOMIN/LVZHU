<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left|top"
        android:id="@+id/left_chat_view"
        android:padding="5dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/chatgpt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="这是内容"
            android:maxWidth="250dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textIsSelectable="true"
            android:background="@drawable/new_he_background"
            android:textColor="@color/white"
            android:id="@+id/left_chat_text_view"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right|top"
        android:id="@+id/right_chat_view"
        android:padding="7dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="这是内容"
            android:maxWidth="250dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textIsSelectable="true"
            android:background="@drawable/new_me_background"
            android:textColor="@color/white"
            android:id="@+id/right_chat_text_view"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/headportrait"/>

    </LinearLayout>

</RelativeLayout>